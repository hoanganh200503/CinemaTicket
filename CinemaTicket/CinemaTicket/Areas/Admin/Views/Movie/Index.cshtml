@model IEnumerable<CinemaTicketAdmin.Data.Movie>
@{
	ViewData["Title"] = "Movie List";
}

<p>
	<a asp-action="Create">Create New</a> <!--nút để thêm movie mới-->
</p>

<div class="row">
	<div class="col-md-12">
		<!-- Advanced Tables -->
		<div class="panel panel-default">
			<div class="panel-heading">
				Movie Table
			</div>
			<div class="panel-body">
				<div class="table-responsive">
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead>
							<tr>
								<th width="110px">@Html.DisplayNameFor(model => model.Url)</th>
								<th width="200px">@Html.DisplayNameFor(model => model.Title)</th>
								<th width="150px">@Html.DisplayNameFor(model => model.UpdatedAt)</th>
								<th width="150px">@Html.DisplayNameFor(model => model.CreatedAt)</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr class="">
									<td>
										<img width="100px"
											 src="~/images/@Html.DisplayFor(modelItem => item.Url)" alt="Poster" />
									</td>
									<td>@Html.DisplayFor(modelItem => item.Title)</td>
									<td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
									<td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
									<td>
										
											<a asp-action="Edit" asp-route-id="@item.MovieId">Edit</a> |
											<a asp-action="Details" asp-route-id="@item.MovieId">Details</a> |
											<a asp-action="Delete" asp-route-id="@item.MovieId">Delete</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<!--End Advanced Tables -->
@section Scripts {
	<script>
		$(document).ready(function () {
			$('#dataTables-example').dataTable();
		});
	</script>
}