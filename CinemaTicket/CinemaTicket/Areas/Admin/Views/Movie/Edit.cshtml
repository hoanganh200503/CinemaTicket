            @* 			<input type="checkbox" name="selectedGenres" value="@genre.GenreId" /> *@
            @* 			<label class="form-check-label">@genre.GenreName</label> *@
            @* 		</div> *@
            @* 	} *@
            @* </div> *@
         
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

