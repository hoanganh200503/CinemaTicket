@{
}
@model CinemaTicketApp.Models.Customer

@{
    ViewData["Title"] = "Chi tiết tài khoản";
}

<div class="container mt-4">
    <div class="row">
        <!-- Thông tin người dùng bên trái -->
        <div class="col-md-3">
            <div class="text-center mb-3">
                <h4>@Model.Name</h4>
                <p class="text-muted">THÀNH VIÊN TỪ @Model.CreatedAt.ToString("MM/yyyy")</p>
            </div>
            <div class="list-group">
                <a asp-action="Profile" class="list-group-item list-group-item-action">Thông tin chung</a>
                <a asp-action="Details" class="list-group-item list-group-item-action active">Chi tiết tài khoản</a>
                <a href="#" class="list-group-item list-group-item-action">Lịch sử giao dịch</a>
                <a asp-action="Logout" class="list-group-item list-group-item-action text-danger">Đăng xuất</a>
            </div>
        </div>

        <!-- Chi tiết tài khoản bên phải -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">CHI TIẾT TÀI KHOẢN</h5>
                    <a asp-action="Edit" class="btn btn-outline-light btn-sm">Chỉnh sửa thông tin</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Thông tin cá nhân -->
                        <div class="col-md-6">
                            <h6 class="card-title">THÔNG TIN CÁ NHÂN</h6>
                            <div class="mb-3">
                                <label class="text-muted">Họ và tên:</label>
                                <div>@Model.Name</div>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted">Email:</label>
                                <div>@Model.Email</div>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted">Mật khẩu:</label>
                                <div>
                                    ••••••••
                                    <a asp-action="Edit" asp-route-changePassword=true class="text-danger ms-2">Đổi mật khẩu</a>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin tài khoản -->
                        <div class="col-md-6">
                            <h6 class="card-title">THÔNG TIN TÀI KHOẢN</h6>
                            <div class="mb-3">
                                <label class="text-muted">Ngày tạo:</label>
                                <div>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted">Cập nhật:</label>
                                <div>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="mb-3">
                                <label class="text-muted">Trạng thái:</label>
                                <div>
                                    <span class="badge bg-success">Hoạt động</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>