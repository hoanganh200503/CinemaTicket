@model IEnumerable<CinemaTicketApp.Models.Customer>

<h2>Danh sách khách hàng</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Vai trò</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>@customer.Role</td>
            </tr>
        }
    </tbody>
</table>
